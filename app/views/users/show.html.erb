<h1 class="text-center text-white pt-5 text-5xl">Created</h1>
<div class="grid gap-4 px-10 pt-10 md:grid-cols-3 ">
  <% @events.each do |event| %>
    <div class="border-2 border-white border-2 rounded-lg text-center p-4 bg-indigo-400 w-80 h-60">
      <h1 class="text-3xl mb-5"><%= event.name.capitalize%></h1>
      <p>Event will be in <%= distance_of_time_in_words(Time.now, event.date) %></p>
      <br>
      <p>Hosted by: <%= event.creator.email %> </p>
    </div>
  <% end %>
</div>
<br>
<h1 class="text-white text-center pt-5 text-5xl">Joined</h1>
<div class="grid gap-4 px-10 pt-10 md:grid-cols-3">
  <% @events_joined.each do |event| %>
    <div class="border-2 border-white border-2 rounded-lg text-center p-4 bg-indigo-400 w-80 h-60">
      <h1 class="text-3xl mb-5"><%= event.name.capitalize%></h1>
      <p>Event will be in <%= distance_of_time_in_words(Time.now, event.date) unless event.date.nil? %></p>
      <br>
      <p>Hosted by: <%= event.creator.email %> </p>
    </div>
  <% end %>
</div>