<div class="text-white">
  <% if @events.any? %>
    <h1 class="text-center text-white pt-5 text-5xl">Created</h1>
    <div class="grid gap-4 px-10 pt-10 md:grid-cols-3 ">
      <% @events.each do |event| %>
        <div class="border-2 border-white border-2 rounded-lg text-center p-4 bg-indigo-800 w-80 h-60">
          <h1 class="text-3xl mb-5"><%= event.name.capitalize%></h1>
          <p><%= event.date.strftime('%d-%m-%Y (%a)') %></p>
          <p>Created by: <%= event.creator.email %> </p>
        </div>
      <% end %>
    </div>
    <br>
    <h1 class="text-white text-center pt-5 text-5xl">Upcoming events</h1>
    <div class="grid gap-4 px-10 pt-10 md:grid-cols-3 mb-5">
      <% @events_joined.each do |event| %>
        <% if event.date > Time.now %>
          <div class="border-2 border-white border-2 rounded-lg text-center p-4 bg-indigo-800 w-80 h-60">
            <h1 class="text-3xl mb-5"><%= event.name.capitalize%></h1>
            <p><%= event.date.strftime('%d-%m-%Y (%a)')%></p>
            <p>Created by: <%= event.creator.email %> </p>
          </div>
        <% end %>
      <% end %>
    </div>
    <h1 class="text-white text-center pt-5 text-5xl">Past events</h1>
    <div class="grid gap-4 px-10 pt-10 md:grid-cols-3 mb-5">
      <% @events_joined.each do |event| %>
        <% if event.date <= Time.now %>
          <div class="border-2 border-white border-2 rounded-lg text-center p-4 bg-indigo-800 w-80 h-60">
            <h1 class="text-3xl mb-5"><%= event.name.capitalize%></h1>
            <p><%= event.date.strftime('%d-%m-%Y (%a)')%></p>
            <p>Created by: <%= event.creator.email %> </p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>