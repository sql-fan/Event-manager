<h1 class="text-5xl font-600 text-white">Create Event</h1>
<% if @event.errors.any? %>
  <div class="flex gap-3">
  <% @event.errors.each do |event| %>
    <p class="bg-red-300 p-2 rounded-lg mb-3"><%= event.full_message %></p>
  <% end %>
  </div>
<% end %>

<%= form_with model: @event, class:"flex mt-4 text-center flex-col mt-2 rounded-lg items-center justify-center border-2 bg-indigo-500 border-white p-4" do |form| %>
  <div class="py-4 w-80">
    <%= form.label :name, class:"text-white text-lg"%>
    <%= form.text_field :name, class: "bg-gray-50 block w-full p-2 rounded-lg focus:outline-4 focus:outline-red-500" %>
  </div>
  <div class="py-4 w-80">
    <%= form.label :date, class:"text-white text-lg"%>
    <%= form.date_field :date, class: "bg-gray-50 block w-full p-2 rounded-lg focus:outline-4 focus:outline-red-500" %>
  </div>
  <%= form.submit "Create event", class:"block px-4 py-2 rounded-lg bg-indigo-800 hover:scale-105 text-white cursor-pointer" %>
<% end %>